    "@types/joi": "^17.2.3",
    "apollo-server-express": "^3.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "graphql": "^16.5.0",
    "joi": "^17.6.0",
    "reflect-metadata": "^0.1.13",
